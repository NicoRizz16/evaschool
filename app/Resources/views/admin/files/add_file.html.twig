{% extends 'admin/base.html.twig' %}


{% form_theme form _self %}

{%- block textarea_widget -%}
    <textarea {{ block('widget_attributes') }} class="md-textarea">{{ value }}</textarea>
{%- endblock textarea_widget -%}


{% block body %}

    <div class="jumbotron">
        <h4 class="main-title text-center"> Ajouter un fichier à la catégorie "{{ category.name }}" </h4>
        <hr class="my-2">

        <div class="col-md-6 offset-md-3 mb-5 pt-5 pb-5">

            {{ form_start(form) }}

            <div class="md-form">
                {{ form_row(form.description, {'attr': {'class': 'md-textarea'}}) }}
            </div>
            <br>
            <div class="row mb-4">
                <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                        <span>Fichier</span>
                        {{ form_widget(form.fileUploadedFile) }}
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
                {{ form_errors(form.fileUploadedFile) }}
            </div>
            <br>
            <div class="text-center">
                <button type="submit" class="btn btn-amber btn-rounded btn-md" formnovalidate>Ajouter <i class="fa fa-plus"></i></button>
                <a href="{{ path('admin_files_list_by_section_category', {'section': category.section, 'category_id': category.id}) }}" class="btn btn-outline-danger btn-rounded waves-effect btn-sm">Annuler <i class="fa fa-times ml-1"></i></a>
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
